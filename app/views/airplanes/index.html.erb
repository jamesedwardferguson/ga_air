<div class="container center">
 <div class="card-panel">

  <p id="notice"><%= notice %></p>

  <h1>Listing Airplanes</h1>

  <table>
    <thead>
      <tr>
        <th>Plane</th>
        <th>Total Seats</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @airplanes.each do |airplane| %>
        <tr>
          <td><%= full_plane_name(airplane) %></td>
          <td><%= num_seats(airplane) %></td>
          <td><%= link_to 'Show', airplane, :class => "btn blue darken-4"  %></td>
          <td><%= link_to 'Edit', edit_airplane_path(airplane), :class => "btn blue darken-4"  %></td>
          <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn blue darken-4"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Airplane', new_airplane_path, :class => "btn blue darken-4"  %>
  </div>
</div>

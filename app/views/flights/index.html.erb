<div class="container center">
  <div class="card-panel">

<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Plane</th>
      <th>Flight Number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= full_plane_name(flight.airplane) %></td>
        <td><%= flight.flight_num %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.departure_date %></td>
        <td><%= link_to 'Show', flight_path(flight), :class => "btn blue darken-4" %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight), :class => "btn blue darken-4" %></td>
        <td><%= link_to 'Destroy', flight_path(flight), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn blue darken-4" %></td>
  end
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path, :class => "btn blue darken-4"%>
  </div>
</div>
